<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
        <servlet-name>sampleservlet</servlet-name>
        <servlet-class>com.appspot.twitteybot.SampleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sampleservlet</servlet-name>
        <url-pattern>/sample</url-pattern>
	</servlet-mapping>

    <servlet>
        <servlet-name>FeedCron</servlet-name>
        <servlet-class>com.appspot.twitteybot.feeds.FeedCron</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FeedCron</servlet-name>
        <url-pattern>/cron/feed</url-pattern>
    </servlet-mapping>
	
	
	 <servlet>
        <servlet-name>UserMainPage</servlet-name>
        <servlet-class>com.appspot.twitteybot.ui.MainPage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserMainPage</servlet-name>
        <url-pattern>/pages/main</url-pattern>
    </servlet-mapping>

	 <servlet>
        <servlet-name>TwitterAccountManager</servlet-name>
        <servlet-class>com.appspot.twitteybot.ui.TwitterAccountManager</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TwitterAccountManager</servlet-name>
        <url-pattern>/pages/twitter</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>/pages/main</welcome-file>
    </welcome-file-list>
</web-app>
