<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    
	 <servlet>
        <servlet-name>UserMainPage</servlet-name>
        <servlet-class>com.appspot.twitteybot.ui.MainPage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserMainPage</servlet-name>
        <url-pattern>/pages/main</url-pattern>
    </servlet-mapping>

	 <servlet>
        <servlet-name>TwitterAccountManager</servlet-name>
        <servlet-class>com.appspot.twitteybot.ui.TwitterAccountManager</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TwitterAccountManager</servlet-name>
        <url-pattern>/pages/twitter</url-pattern>
    </servlet-mapping>

	 <servlet>
        <servlet-name>FeedConfigManager</servlet-name>
        <servlet-class>com.appspot.twitteybot.ui.FeedConfigManager</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FeedConfigManager</servlet-name>
        <url-pattern>/pages/feeds</url-pattern>
    </servlet-mapping>

	 <servlet>
        <servlet-name>StatusFileUploader</servlet-name>
        <servlet-class>com.appspot.twitteybot.ui.StatusFileUploader</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatusFileUploader</servlet-name>
        <url-pattern>/pages/upload</url-pattern>
    </servlet-mapping>

	 <servlet>
        <servlet-name>StatusManager</servlet-name>
        <servlet-class>com.appspot.twitteybot.ui.StatusManager</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatusManager</servlet-name>
        <url-pattern>/pages/status</url-pattern>
    </servlet-mapping>

	<servlet>
        <servlet-name>CronTrigger</servlet-name>
        <servlet-class>com.appspot.twitteybot.cron.CronTrigger</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CronTrigger</servlet-name>
        <url-pattern>/cron/*</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>/pages/main</welcome-file>
    </welcome-file-list>
</web-app>
