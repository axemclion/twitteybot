<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
 version="2.5">
    <display-name>
        twitteybot
    </display-name>
    <!-- Feed CRON -->
    <servlet>
        <servlet-name>
            FeedReaderCronJob
        </servlet-name>
        <servlet-class>
            com.appspot.twitteybot.feeds.FeedCron
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>
            FeedReaderCronJob
        </servlet-name>
        <url-pattern>
            /cron/feed
        </url-pattern>
    </servlet-mapping>
    <!-- Twitter CRON-->
    <servlet>
        <servlet-name>
            TwitterCronJob
        </servlet-name>
        <servlet-class>
            com.appspot.twitteybot.twitter.TwitterCron
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>
            TwitterCronJob
        </servlet-name>
        <url-pattern>
            /cron/twitter
        </url-pattern>
    </servlet-mapping>
    
    <!-- SAMPLE SERVLET -->
    <servlet>
        <servlet-name>
            Sample
        </servlet-name>
        <servlet-class>
            com.appspot.twitteybot.SampleServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>
            Sample
        </servlet-name>
        <url-pattern>
            /sample
        </url-pattern>
    </servlet-mapping>
    
</web-app>
